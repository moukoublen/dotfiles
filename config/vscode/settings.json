{
  "files.trimTrailingWhitespace": true,
  "files.autoSave": "afterDelay",
  "editor.bracketPairColorization.enabled": false, //todo: revisit
  "editor.minimap.enabled": false,
  "editor.detectIndentation": false,
  "editor.renderWhitespace": "boundary",
  "editor.renderControlCharacters": true,
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.lineHeight": 1.6,
  "editor.fontSize": 16,
  "editor.fontFamily": "'Cascadia Code'",
  "editor.fontWeight": "400",
  "editor.fontLigatures": true,
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "phase",
  "workbench.settings.useSplitJSON": true,
  "workbench.settings.editor": "json",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorTheme": "GitHub Dark Dimmed",
  "workbench.iconTheme": "vscode-icons",
  "window.zoomLevel": 2,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "block",
  //"terminal.integrated.cursorWidth": 1,
  "terminal.integrated.defaultLocation": "editor",
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "terminal.integrated.fontSize": 18,
  "terminal.integrated.fontFamily": "'Cascadia Mono PL'",
  "terminal.integrated.fontWeight": "350",
  "terminal.integrated.fontWeightBold": "350",
  "terminal.integrated.letterSpacing": 0,
  "terminal.integrated.lineHeight": 1,
  "terminal.integrated.scrollback": 99999999,
  "yaml.format.printWidth": 280,
  "[xml]": {
    "editor.autoClosingBrackets": "never",
    "files.trimFinalNewlines": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
  },
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnPaste": true
  },
  "[json]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnPaste": true
  },
  "[jsonc]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnPaste": true
  },
  "[shellscript]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnPaste": false
  },
  "[scala]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnPaste": false
  },
  "[makefile]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": false
  },
  "rest-client.fontFamily": "JetBrains Mono",
  "rest-client.fontWeight": "300",
  "rest-client.fontSize": 15,
  // ===============
  // >>> Go lang <<<
  "[go]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": false,
    "editor.formatOnSave": true
  },
  "[go.mod]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": false,
    "editor.formatOnSave": true
  },
  "go.autocompleteUnimportedPackages": true,
  "go.useCodeSnippetsOnFunctionSuggest": true,
  "go.editorContextMenuCommands": {
    "toggleTestFile": true,
    "addTags": true,
    "removeTags": true,
    "fillStruct": true,
    "testAtCursor": true,
    "testFile": false,
    "testPackage": false,
    "generateTestForFunction": true,
    "generateTestForFile": true,
    "generateTestForPackage": false,
    "addImport": false,
    "testCoverage": true,
    "playground": false,
    "debugTestAtCursor": true,
    "benchmarkAtCursor": false
  },
  "go.enableCodeLens": {
    "references": false,
    "runtest": true
  },
  "go.lintTool": "golangci-lint",
  "go.lintFlags": [],
  //"go.buildFlags": [ "-mod=vendor", "-tags=?" ],
  "go.testFlags": [
    "-count=1",
    "-v",
    "-race"
  ],
  "go.gotoSymbol.includeImports": true,
  "go.formatTool": "default",
  // ~~Language Server~~
  //https://github.com/golang/tools/blob/master/gopls/doc/settings.md
  "go.useLanguageServer": true,
  "gopls": {
    "formatting.gofumpt": true,
    "build.allowImplicitNetworkAccess": true,
    "build.experimentalWorkspaceModule": false,
    "build.buildFlags": [
      "-mod=vendor",
      //"-tags=?"
    ],
    "build.env": {
      "GO111MODULE": "on"
    },
    "codelenses": {
      "gc_details": true,
      "generate": false,
      "regenerate_cgo": false,
      "tidy": true,
      "upgrade_dependency": true,
      "vendor": true
    },
    "ui.completion.usePlaceholders": true,
    "ui.completion.matcher": "Fuzzy",
    "ui.completion.completionBudget": "100ms",
    "ui.completion.experimentalPostfixCompletions": true
  },
  "go.toolsGopath": "${env:HOME}/vscode-gotools",
  "go.toolsManagement.autoUpdate": true,
  // >>> Go lang <<<
  // ===============
  "gitlens.codeLens.enabled": false,
  "cSpell.enabled": true,
  "cSpell.enableFiletypes": [
    "git-rebase",
    "go.sum",
    "ignore",
    "makefile",
    "sql"
  ],
  "redhat.telemetry.enabled": true,
  // ==============
  // >>> colors <<<
  "editor.tokenColorCustomizations": {
    "[GitHub Dark Dimmed]": {
      "textMateRules": [
        {
          "scope": [
            "source.go",
            "variable.other.assignment.go",
            "variable.other.declaration.go"
          ],
          "settings": {
            "foreground": "#adbac7", // [Dark_dimmed Mode] scale.white
          },
        },
        {
          "scope": [
            "punctuation.other.comma.go"
          ],
          "settings": {
            "foreground": "#986ee2", // [Dark_dimmed Mode] scale.purple.4
          },
        },
        {
          "scope": [
            "comment",
            "punctuation.definition.comment",
            "string.comment"
          ],
          "settings": {
            "foreground": "#444c56", // [Dark_dimmed Mode] scale.gray.6
          },
        },
        {
          "scope": [
            "keyword",
            "storage",
            "storage.type"
          ],
          "settings": {
            "foreground": "#b083f0" // [Dark_dimmed Mode] scale.purple.3
          }
        },
        {
          "scope": [
            "keyword.operator.comparison.go",
            "keyword.operator.assignment.go",
            "punctuation.definition.begin.bracket.round.go",
            "punctuation.definition.end.bracket.round.go",
            "punctuation.definition.begin.bracket.curly.go",
            "punctuation.definition.end.bracket.curly.go",
            "punctuation.definition.bracket.square.go",
            "punctuation.definition.variables.begin.bracket.round.go",
            "punctuation.definition.variables.end.bracket.round.go",
          ],
          "settings": {
            "foreground": "#DE5B41" // [Dark_dimmed Mode] scale.coral.4
          }
        },
        {
          "scope": [
            "string",
            "punctuation.definition.string",
            "entity.name.import.go"
          ],
          "settings": {
            "foreground": "#c69026" // [Dark_dimmed Mode] scale.yellow.3
          }
        },
        {
          "scope": [
            "entity.name",
            "entity.name.function",
          ],
          "settings": {
            "foreground": "#e275ad" // [Dark_dimmed Mode] scale.pink.3
          }
        },
        {
          "scope": [
            "string.unquoted.go.mod",
          ],
          "settings": {
            "foreground": "#EC775C" // [Dark_dimmed Mode] scale.coral.3
          }
        },
        {
          "scope": [
            "support",
          ],
          "settings": {
            "foreground": "#e0823d" // [Dark_dimmed Mode] scale.orange.3
          }
        },
        {
          "scope": [
            "constant"
          ],
          "settings": {
            "foreground": "#6cb6ff" // [Dark_dimmed Mode] scale.blue.2
          }
        },
      ]
    }
  },
  "workbench.colorCustomizations": {
    "[GitHub Dark Dimmed]": {
      "list.errorForeground": "#e5534b", // scale.red.4
      "list.warningForeground": "#cc6b2c", // scale.orange.4
      "gitDecoration.modifiedResourceForeground": "#986ee2", // scale.purple.4
      "gitDecoration.untrackedResourceForeground": "#46954a", // scale.green.4
      //"tab.activeModifiedBorder": "#771D13", // scale.coral.8
      "tab.activeBackground": "#22272e", // scale.gray.9
      "tab.activeBorder": "#ae4c82", // scale.pink.5
      "tab.activeBorderTop": "#ae4c82", // scale.pink.5
      "tab.activeForeground": "#ae4c82", // scale.pink.5
      "tab.hoverBackground": "#2d333b", // scale.gray.8
      "editor.background": "#1c2128", // scale.black
      "editorBracketHighlight.foreground1": "#e85aad", // [Light] scale.pink.4
      "editorBracketHighlight.foreground2": "#218bff", // [Light] scale.blue.4
      "editorBracketHighlight.foreground3": "#a475f9", // [Light] scale.purple.4
      "editorBracketHighlight.foreground4": "#2da44e", // [Light] scale.green.4
      "editorBracketHighlight.foreground5": "#bf8700", // [Light] scale.yellow.4
      "editorBracketHighlight.foreground6": "#e85aad", // [Light] scale.pink.4
      "editorBracketHighlight.unexpectedBracket.foreground": "#fa4549", // [Light] scale.red.4
      // [Dark_dimmed Mode] scale.green.5
      "editor.findMatchBackground": "#347d3988",
      "editor.findMatchHighlightBackground": "#347d3944",
      // [Dark_dimmed Mode] scale.purple.3
      "editor.selectionHighlightBackground": "#b083f033",
      "editor.selectionHighlightBorder": "#b083f000",
      "editor.wordHighlightBackground": "#b083f000",
      "editor.wordHighlightStrongBackground": "#b083f000",
      "editor.wordHighlightBorder": "#b083f099",
      "editor.wordHighlightStrongBorder": "#b083f066",
      "editorBracketMatch.background": "#b083f050",
      "editorBracketMatch.border": "#b083f000",
      // [Dark_dimmed Mode] scale.pink.6
      "editor.linkedEditingBackground": "#9e367022",
      "editor.inactiveSelectionBackground": "#9e367022",
      "editor.selectionBackground": "#9e367044",
      // [Dark_dimmed Mode] scale.gray.7
      "editorWhitespace.foreground": "#373e47",
      // terminal
      "terminal.selectionBackground": "#69264a", // scale.pink.8
      "terminal.background": "#1c2128", // scale.black
      "terminal.foreground": "#adbac7", // scale.gray.1
      "terminal.ansiBlack": "#444c56", // scale.gray.6
      "terminal.ansiBrightBlack": "#636e7b", // scale.gray.4
      "terminal.ansiWhite": "#909dab", // scale.gray.2
      "terminal.ansiBrightWhite": "#cdd9e5", // scale.gray.0 / scale.white
      "terminal.ansiRed": "#e5534b", // scale.red.4
      "terminal.ansiBrightRed": "#f47067", // scale.red.3
      "terminal.ansiGreen": "#46954a", // scale.green.4
      "terminal.ansiBrightGreen": "#57ab5a", // scale.green.3
      "terminal.ansiYellow": "#ae7c14", // scale.yellow.4
      "terminal.ansiBrightYellow": "#c69026", // scale.yellow.3
      "terminal.ansiBlue": "#4184e4", // scale.blue.4
      "terminal.ansiBrightBlue": "#539bf5", // scale.blue.3
      "terminal.ansiMagenta": "#986ee2", // scale.purple.4
      "terminal.ansiBrightMagenta": "#b083f0", // scale.purple.3
      "terminal.ansiCyan": "#c96198", // scale.pink.4
      "terminal.ansiBrightCyan": "#e275ad", // scale.pink.3
      "terminalCursor.background": "#472c82", // scale.purple.8
      "terminalCursor.foreground": "#ea4aaa",
    },
  },
  // >>> colors <<<
  // ==============
}