{
  "diffEditor.ignoreTrimWhitespace": false,
  "files.trimTrailingWhitespace": true,
  "editor.smoothScrolling": true,
  "editor.bracketPairColorization.enabled": false, //todo: revisit
  "editor.minimap.enabled": false,
  "editor.minimap.renderCharacters": false,
  "editor.detectIndentation": false,
  "editor.renderWhitespace": "boundary",
  "editor.renderControlCharacters": true,
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  //"editor.lineHeight": 29,
  "editor.fontFamily": "'Monaspace Argon', monospace", //'Monaspace Neon', 'JetBrains Mono', 'IntelOne Mono'
  "editor.inlineSuggest.fontFamily": "'Monaspace Krypton', monospace",
  "editor.fontSize": 17,
  "editor.fontWeight": 300,
  "editor.fontLigatures": "'calt', 'liga', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08', 'ss09', 'ss10'",
  //"editor.fontVariations": false,
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "gitlens.currentLine.fontFamily": "'Monaspace Radon'",
  "gitlens.blame.fontFamily": "'Monaspace Krypton'",
  "explorer.autoReveal": true,
  "explorer.decorations.badges": false,
  "explorer.decorations.colors": true,
  "workbench.editor.mouseBackForwardToNavigate": true,
  "workbench.settings.useSplitJSON": true,
  "workbench.settings.editor": "json",
  "workbench.startupEditor": "newUntitledFile",
  "window.titleBarStyle": "custom",
  "window.menuBarVisibility": "compact",
  "window.titleSeparator": " • ",
  "window.title": "${rootName}${separator}${rootPath} ${dirty}",
  "window.newWindowProfile": "Default",
  "files.autoSave": "afterDelay",
  "terminal.integrated.gpuAcceleration": "off",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "block",
  //"terminal.integrated.cursorWidth": 1,
  "terminal.integrated.tabs.separator": " • ",
  "terminal.integrated.defaultLocation": "view",
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "terminal.integrated.fontFamily": "'Monaspace Xenon NF', 'JetBrainsMono Nerd Font', 'IntelOne Mono'",
  "terminal.integrated.fontSize": 11,
  "terminal.integrated.fontLigatures.enabled": false,
  "terminal.integrated.fontLigatures.featureSettings": "\"calt\" on",
  "terminal.integrated.fontWeight": "400",
  "terminal.integrated.fontWeightBold": "450",
  "terminal.integrated.letterSpacing": 0,
  "terminal.integrated.lineHeight": 1.3,
  "terminal.integrated.scrollback": 99999999,
  "terminal.integrated.profiles.osx": {
    "bash-homebrew": {
      "path": "/opt/homebrew/bin/bash",
      "args": [
        //"-i",
        //"--login",
        "--rcfile",
        "${env:HOME}/.bash_profile",
      ],
      "icon": "terminal-bash"
    },
  },
  "terminal.integrated.defaultProfile.osx": "bash-homebrew",
  "yaml.format.printWidth": 280,
  "[xml]": {
    "editor.autoClosingBrackets": "never",
    "files.trimFinalNewlines": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "[properties]": {
    "editor.insertSpaces": false,
    "editor.tabSize": 2,
  },
  "[github-actions-workflow]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnPaste": true,
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnPaste": true
  },
  "[json]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnPaste": true
  },
  "[jsonc]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnPaste": true
  },
  "[graphql]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnPaste": true
  },
  "[shellscript]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnPaste": false
  },
  "[makefile]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": false
  },
  "[dockercompose]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    },
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "gitlens.codeLens.enabled": false,
  // <golang>
  // https://github.com/golang/vscode-go/wiki/settings
  "[go]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": false,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "[go.mod]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": false,
    "editor.formatOnSave": true
  },
  "go.toolsEnvVars": {},
  "go.toolsGopath": "${env:HOME}/vscode-gotools",
  "go.toolsManagement.autoUpdate": true,
  "go.toolsManagement.checkForUpdates": "proxy",
  "go.disableConcurrentTests": true,
  "go.inlayHints.constantValues": true,
  "go.inlayHints.rangeVariableTypes": true,
  "go.inlayHints.ignoredError": true,
  "go.testFlags": [
    "-count=1",
    "-parallel=1",
    //"-v",
    "-race"
  ],
  // ~~Language Server~~
  // https://github.com/golang/tools/blob/master/gopls/doc/settings.md
  "go.useLanguageServer": true,
  "gopls": {
    "formatting.gofumpt": true,
    "ui.completion.usePlaceholders": true,
    "ui.diagnostic.analyses": {
      // https://pkg.go.dev/golang.org/x/tools/go/analysis/passes
      // https://github.com/golang/tools/blob/master/gopls/doc/analyzers.md
      "ST1000": false,
    },
    //"ui.diagnostic.staticcheck": true,
  },
  // </golang>
  // <themes and colors mods>
  //"workbench.iconTheme": "vscode-icons",
  //"workbench.colorTheme": "GitHub Dark Dimmed",
  "editor.semanticTokenColorCustomizations": {},
  "editor.tokenColorCustomizations": {},
  "workbench.colorCustomizations": {
    "[Default Dark Modern]": {
      //"editor.selectionBackground": "#bb0d8a8c",
      "tab.activeBorderTop": "#0078d4",
      "tab.hoverBorder": "#0078d4",
      "editorGutter.deletedBackground": "#37373d",
    },
  },
  // </themes and colors mods>
  "cSpell.language": "en,el",
  "cSpell.enableFiletypes": [
    "*",
    "!go.mod"
  ],
  "docker.extension.enableComposeLanguageServer": false
}