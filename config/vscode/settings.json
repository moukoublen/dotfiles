{
  "files.trimTrailingWhitespace": true,
  "files.autoSave": "afterDelay",
  "editor.bracketPairColorization.enabled": true, //todo: revisit
  "editor.minimap.enabled": false,
  "editor.detectIndentation": false,
  "editor.renderWhitespace": "boundary",
  "editor.renderControlCharacters": true,
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.lineHeight": 1.4,
  "editor.fontSize": 18,
  "editor.fontFamily": "'Cascadia Code'",
  "editor.fontWeight": "350",
  "editor.fontLigatures": true,
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "phase",
  "explorer.autoReveal": true,
  "explorer.decorations.badges": false,
  "explorer.decorations.colors": true,
  "workbench.settings.useSplitJSON": true,
  "workbench.settings.editor": "json",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.iconTheme": "vscode-icons",
  "terminal.integrated.gpuAcceleration": "off",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "block",
  //"terminal.integrated.cursorWidth": 1,
  "terminal.integrated.defaultLocation": "editor",
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontFamily": "'JetBrains Mono', 'Cascadia Mono PL'",
  "terminal.integrated.fontWeight": "400",
  "terminal.integrated.fontWeightBold": "450",
  "terminal.integrated.letterSpacing": 0,
  "terminal.integrated.lineHeight": 1,
  "terminal.integrated.scrollback": 99999999,
  "yaml.format.printWidth": 280,
  "[xml]": {
    "editor.autoClosingBrackets": "never",
    "files.trimFinalNewlines": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
  },
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnPaste": true
  },
  "[json]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnPaste": true
  },
  "[jsonc]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnPaste": true
  },
  "[graphql]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnPaste": true
  },
  "[shellscript]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnPaste": false
  },
  "[scala]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnPaste": false
  },
  "[makefile]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": false
  },
  "gitlens.codeLens.enabled": false,
  "cSpell.enabled": true,
  "cSpell.enableFiletypes": [
    "git-rebase",
    "go.sum",
    "ignore",
    "makefile",
    "sql"
  ],
  // _______________
  // >>> Go lang <<<
  "[go]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": false,
    "editor.formatOnSave": true
  },
  "[go.mod]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": false,
    "editor.formatOnSave": true
  },
  "go.useCodeSnippetsOnFunctionSuggest": true,
  "go.useCodeSnippetsOnFunctionSuggestWithoutType": false,
  "go.editorContextMenuCommands": {
    "toggleTestFile": true,
    "addTags": true,
    "removeTags": true,
    "fillStruct": true,
    "testAtCursor": true,
    "testFile": false,
    "testPackage": false,
    "generateTestForFunction": true,
    "generateTestForFile": true,
    "generateTestForPackage": false,
    "addImport": false,
    "testCoverage": true,
    "playground": false,
    "debugTestAtCursor": true,
    "benchmarkAtCursor": false
  },
  "go.enableCodeLens": {
    "references": false,
    "runtest": true
  },
  "go.languageServerExperimentalFeatures": {
    "diagnostics": true
  },
  "go.formatTool": "default",
  // ~~Language Server~~ https://github.com/golang/tools/blob/master/gopls/doc/settings.md
  "go.useLanguageServer": true,
  "gopls": {
    "formatting.gofumpt": true,
    "build.buildFlags": [
      "-mod=vendor",
      //"-tags=?"
    ],
    "build.env": {
      "GO111MODULE": "on"
    },
    "build.allowImplicitNetworkAccess": true,
    "build.experimentalWorkspaceModule": false,
    "codelenses": {
      "gc_details": true,
      "generate": false,
      "regenerate_cgo": false,
      "tidy": true,
      "upgrade_dependency": true,
      "vendor": true
    },
    "ui.completion.usePlaceholders": true,
    "ui.completion.matcher": "Fuzzy",
    "ui.completion.completionBudget": "100ms",
    "ui.completion.experimentalPostfixCompletions": true,
    "ui.diagnostic.analyses": {
      "assign": true,
      "atomicalign": true,
      "atomic": true,
      "bools": true,
      "buildtag": true,
      "composites": true,
      "copylocks": true,
      "errorsas": true,
      "fieldalignment": false,
      "fillreturns": true,
      "fillstruct": true,
      "ifaceassert": true,
      "httpresponse": true,
      "infertypeargs": true,
      "loopclosure": true,
      "lostcancel": true,
      "nilfunc": true,
      "nilness": true,
      "nonewvars": true,
      "noresultvalues": true,
      "printf": true,
      "shadow": true,
      "simplifycompositelit": true,
      "simplifyslice": true,
      "simplifyrange": true,
      "sortslice": true,
      "stdmethods": true,
      "stringintconv": true,
      "structtag": true,
      "testinggoroutine": true,
      "tests": true,
      "undeclaredname": true,
      "unmarshal": true,
      "unreachable": true,
      "unsafeptr": true,
      "unusedparams": true,
      "unusedresult": true,
      "unusedwrite": true,
      "useany": true
    },
    "ui.documentation.hoverKind": "SingleLine",
    "ui.documentation.linksInHover": false,
    "ui.navigation.importShortcut": "Definition",
  },
  "go.toolsEnvVars": {},
  "go.toolsGopath": "${env:HOME}/vscode-gotools",
  "go.toolsManagement.autoUpdate": true,
  // ______________
  // >>> colors <<<
  "editor.tokenColorCustomizations": {
    "[Default Dark+]": {
      "textMateRules": [],
    },
    "[GitHub Dark Default]": {
      "textMateRules": [
        {
          "scope": [
            "source.go",
            "variable.other.assignment.go",
            "variable.other.declaration.go"
          ],
          "settings": {
            "foreground": "#c9d1d9", // [Dark Mode] scale.gray.1
          },
        },
        {
          "scope": [
            "comment",
            "punctuation.definition.comment",
            "string.comment"
          ],
          "settings": {
            "foreground": "#484f58", // [Dark Mode] scale.gray.5
          },
        },
        {
          "scope": [
            "keyword",
            "storage",
            "storage.type"
          ],
          "settings": {
            "foreground": "#a371f7" // [Dark Mode] scale.purple.4
          }
        },
        {
          "scope": [
            "support",
            "entity.name",
            "entity.name.function"
          ],
          "settings": {
            "foreground": "#f778ba" // [Dark Mode] scale.pink.3
          }
        },
        {
          "scope": [
            "punctuation.other.comma.go",
            "keyword.operator.comparison.go",
            "keyword.operator.assignment.go",
            "punctuation.definition.begin.bracket.round.go",
            "punctuation.definition.end.bracket.round.go",
            "punctuation.definition.begin.bracket.curly.go",
            "punctuation.definition.end.bracket.curly.go",
            "punctuation.definition.bracket.square.go",
            "punctuation.definition.variables.begin.bracket.round.go",
            "punctuation.definition.variables.end.bracket.round.go",
          ],
          "settings": {
            "foreground": "#8b949e" // [Dark Mode] scale.gray.3
          }
        },
        {
          "scope": [
            "string",
            "punctuation.definition.string",
            "entity.name.import.go"
          ],
          "settings": {
            "foreground": "#d29922" // [Dark Mode] scale.yellow.3
          }
        },
        {
          "scope": [
            "string.unquoted.go.mod",
          ],
          "settings": {
            "foreground": "#db6d28" // [Dark Mode] scale.coral.4
          }
        },
        {
          "scope": [
            "constant"
          ],
          "settings": {
            "foreground": "#58a6ff" // [Dark Mode] scale.blue.3
          }
        },
      ]
    },
    "[GitHub Dark Dimmed]": {
      "textMateRules": [
        {
          "scope": [
            "source.go",
            "variable.other.assignment.go",
            "variable.other.declaration.go"
          ],
          "settings": {
            "foreground": "#adbac7", // [Dark_dimmed Mode] scale.white
          },
        },
        {
          "scope": [
            "punctuation.other.comma.go"
          ],
          "settings": {
            "foreground": "#986ee2", // [Dark_dimmed Mode] scale.purple.4
          },
        },
        {
          "scope": [
            "comment",
            "punctuation.definition.comment",
            "string.comment"
          ],
          "settings": {
            "foreground": "#444c56", // [Dark_dimmed Mode] scale.gray.6
          },
        },
        {
          "scope": [
            "keyword",
            "storage",
            "storage.type"
          ],
          "settings": {
            "foreground": "#b083f0" // [Dark_dimmed Mode] scale.purple.3
          }
        },
        {
          "scope": [
            "keyword.operator.comparison.go",
            "keyword.operator.assignment.go",
            "punctuation.definition.begin.bracket.round.go",
            "punctuation.definition.end.bracket.round.go",
            "punctuation.definition.begin.bracket.curly.go",
            "punctuation.definition.end.bracket.curly.go",
            "punctuation.definition.bracket.square.go",
            "punctuation.definition.variables.begin.bracket.round.go",
            "punctuation.definition.variables.end.bracket.round.go",
          ],
          "settings": {
            "foreground": "#DE5B41" // [Dark_dimmed Mode] scale.coral.4
          }
        },
        {
          "scope": [
            "string",
            "punctuation.definition.string",
            "entity.name.import.go"
          ],
          "settings": {
            "foreground": "#c69026" // [Dark_dimmed Mode] scale.yellow.3
          }
        },
        {
          "scope": [
            "entity.name",
            "entity.name.function",
          ],
          "settings": {
            "foreground": "#e275ad" // [Dark_dimmed Mode] scale.pink.3
          }
        },
        {
          "scope": [
            "string.unquoted.go.mod",
          ],
          "settings": {
            "foreground": "#EC775C" // [Dark_dimmed Mode] scale.coral.3
          }
        },
        {
          "scope": [
            "support",
          ],
          "settings": {
            "foreground": "#e0823d" // [Dark_dimmed Mode] scale.orange.3
          }
        },
        {
          "scope": [
            "constant"
          ],
          "settings": {
            "foreground": "#6cb6ff" // [Dark_dimmed Mode] scale.blue.2
          }
        },
      ]
    }
  },
