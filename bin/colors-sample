#!/usr/bin/env bash

__msg1() {
  local rst='\e[0m'

  local nrm='\e[0;'${1}'m'
  local brt='\e[1;'${1}'m'
  local dmd='\e[3;'${1}'m'
  local bck='\e[0;'${2}'m'

  printf "${nrm}%-15s${rst}:  %s ${nrm}normal${rst} | %s ${brt}bright${rst} | %s ${dmd}dimmed${rst} | %-9s ${bck}background${rst}  |\n" \
    "${3}" "${nrm}" "${brt}" "${dmd}" "${bck}"
}


__show() {
  __msg1 39 49 "Default"
  __msg1 30 40 "Black"
  __msg1 90 100 "Light Black"
  __msg1 31 41 "Red"
  __msg1 91 101 "Light Red"
  __msg1 32 42 "Green"
  __msg1 92 102 "Light Green"
  __msg1 33 43 "Yellow"
  __msg1 93 103 "Light Yellow"
  __msg1 34 44 "Blue"
  __msg1 94 104 "Light Blue"
  __msg1 35 45 "Purple"
  __msg1 95 105 "Light Purple"
  __msg1 36 46 "Turquoise"
  __msg1 96 106 "Light Turquoise"
  __msg1 37 47 "Grey"
  __msg1 97 107 "Light Grey"
}


__show

unset -f __show
