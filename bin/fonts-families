#!/usr/bin/env bash

fams=(
  emoji
  serif
  sans-serif
  monospace
  ui-monospace
  -apple-system
  system-ui
  Arial
  "Verdana"
  Helvetica
  "Times New Roman"
  "Courier New"
)

for family in "${fams[@]}"; do
  printf "%-17s: " "${family}"
  fc-match ":family=${family}"
done

# fc-match -a 'sans-serif'
# fc-match -s 'sans-serif'
