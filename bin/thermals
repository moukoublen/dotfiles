#!/usr/bin/env bash

echo -e "\e[1;36mThermals\e[0m"
for d in /sys/class/thermal/thermal_zone*/ ; do
  cat "${d}/type" | tr -d '\n'

  echo -n -e "|"
  temp=
  temp=$(cat "${d}/temp" | tr -d '\n')
  temp=$(echo "scale=2; ${temp} / 1000" | bc -l)
  echo -n "${temp}"

  echo -n -e "|"
  cat "${d}/mode" | tr -d '\n'

  echo ""
done | column -t --separator '|'

