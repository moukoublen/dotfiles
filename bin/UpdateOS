#!/usr/bin/env bash

lg() {
  echo "### $1 ###"
}

update_dnf() {
    lg "sudo dnf update --refresh"
    sudo dnf update --refresh
}

update_apt() {
    lg "sudo apt update"
    sudo apt update
    lg "sudo apt upgrade"
    sudo apt upgrade
}

sudo test
os_name=$(lsb_release -is)
lg $os_name
case "$os_name" in
  "Fedora")
    update_dnf
    ;;
  "Ubuntu"|"Debian"|"LinuxMint"|"Pop")
    update_apt
    ;;
  *)
    lg "this script does not have update command for this release $os_name"
    ;;
esac

unset -f update_dnf
unset -f update_apt
