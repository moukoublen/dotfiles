#!/usr/bin/env bash

prnt() {
  echo -e "\e[1;34m ‚ïç\e[m $1"
}

update_dnf() {
    prnt "sudo dnf update --refresh"
    sudo dnf update --refresh
    sudo dnf needs-restarting
}

update_apt() {
    prnt "sudo apt update"
    sudo apt update
    prnt "sudo apt upgrade"
    sudo apt upgrade
}

prnt "$(what-os) - $(what-pm)"
case "$(what-pm)" in
  "dnf")
    update_dnf
    ;;
  "apt")
    update_apt
    ;;
  *)
    prnt "this script does not have update command for this release $os_name"
    ;;
esac

unset -f update_dnf
unset -f update_apt
