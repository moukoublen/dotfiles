__FNT_ALL=( \
  victormono \
  hack \
  firacode \
  sourcesanspro \
  ibmplex \
  inter \
  jetbrainsmono \
  cascadiacode \
  nerdjetbrainsmono \
  nerdcascadia \
  nerdvictormono \
  nerdoverpass \
  hubotsans \
  monasans \
  intelonemono
)

__LP=()
if [[ "$#" -gt 0 ]]; then
  __LP=("$@")
else
  __LP=("${__FNT_ALL[@]}")
fi

for f in "${__LP[@]}"; do
  "__fnt_${f}"
done

case "$(uname)" in
  "Darwin")
    ;;
  "Linux")
    (cd /tmp/; fc-cache -f)
    ;;
esac
